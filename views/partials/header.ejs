<!DOCTYPE html> 
<html>

    <head> 
    <meta charset="UTF-8">
    <link href="styles.css" rel="stylesheet">
    <title>The God Bless Webpage</title>
    </head> 
    <body>
        <header>
            <nav>
                <ul>
                    <% if (user && user.isAdmin) { %>
                        <!-- Admin-specific menu -->
                        <li><a href="/posts">Posts</a></li>
                        <li><a href="/courses">Courses</a></li>
                        <li><a href="/events">Events</a></li>
                        <li><a href="/calendar">Calendar</a></li>
                      <% } else if (user) { %>
                        <!-- Regular user menu -->
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/course-calendar">Course Calendar</a></li>
                        <li><a href="/loggedinpage">My Courses</a></li>
                      <% } else { %>
                        <!-- Guest menu (optional) -->
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                        <li><a href="/course-calendar">Course Calendar</a></li>
                      <% } %>    
                </ul>
            </nav>
            <div class="actions">
                <% if (user) { %>
                    <button class="logout" href="/logout" role="button">Logout</button>
                <% } else { %>
                    <button class="login">Login</button>
                    <button class="register">Register</button>
                <% } %>
            </div>
        </header>
        
    <script>
        document.addEventListener("DOMContentLoaded", () => {
        // Select buttons
        const loginButton = document.querySelector(".login");
        const registerButton = document.querySelector(".register");
    
        // Add click event for login button
        loginButton.addEventListener("click", () => {
            window.location.href = "/login"; // Redirect to the login page
        });
    
        // Add click event for register button
        registerButton.addEventListener("click", () => {
            window.location.href = "/register"; // Redirect to the register page
        });
    });
    </script>
    
            

          
